<UserControl
    x:Class="Pizza.KeyboardAndMouseAdapter.UI.Pages.MiscellaneousSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:common="clr-namespace:Pizza.KeyboardAndMouseAdapter.UI.Controls.Common"
    xmlns:page="clr-namespace:Pizza.KeyboardAndMouseAdapter.UI.Controls.MiscellaneousSettings"
    >

    <ScrollViewer
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
        x:Name="scrollViewer">

        <StackPanel Width="650">
            
            <page:MiscellaneousSettingsGeneralControl/>
            
            <!-- spacer -->
            <TextBlock/>
            <TextBlock/>
            
            <page:RemotePlayToolbarSettingsControl/>

            <!-- spacer -->
            <TextBlock/>
            <TextBlock/>
            
            <common:LogControl/>

            <!-- spacer -->
            <TextBlock/>
            <TextBlock/>

            <page:GamepadUpdaterNoSleepControl/>

            <!-- spacer -->
            <TextBlock/>
            <TextBlock/>

            <page:ColourSchemeToggleControl/>

        </StackPanel>

    </ScrollViewer>

</UserControl>

<UserControl x:Class="PS4KeyboardAndMouseAdapter.UI.Controls.MiscellaneousSettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    d:DesignHeight="360"
    d:DesignWidth="700"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             
    xmlns:controls="clr-namespace:PS4KeyboardAndMouseAdapter.UI.Controls"
    xmlns:wpfspark="clr-namespace:WPFSpark;assembly=WPFSpark">

    <Grid >
        <Grid.ColumnDefinitions>
            <!-- 5 columns -->
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <!-- Heading 30px -->
            <!-- Regular line 21px -->
            <!-- subtext line 15px -->
            <!-- Toggle 30px -->


            <!-- row 0 -->
            <RowDefinition Height="30px" />
            <RowDefinition Height="21px" />
            <RowDefinition Height="30px" />
            <RowDefinition Height="15px" />
            <RowDefinition Height="21px" />

            <!-- row 5 -->
            <RowDefinition Height="21px" />
            <RowDefinition Height="15px" />
            <RowDefinition Height="15px" />
            <RowDefinition Height="21px" />
            <RowDefinition Height="30px" />

            <!-- row 10 -->
            <RowDefinition Height="21px" />
            <RowDefinition Height="21px" />

        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            FontSize="16"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Misc Settings"/>

        <TextBlock 
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="Reset RemotePlay window location"
            />

        <Button 
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Click="Handler_ResetRemotePlay"
            Content="Reset RemotePlay window location"
            />

        <TextBlock 
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            FontSize="10"
            Text="Sometimes when you have enabled mouse input for RemotePlay, then sometimes you can drag the RemotePlay window offscreen"
            />

        <!-- row 3 intentionally empty -->

        <controls:SliderV
            Grid.Row="5"
            Grid.ColumnSpan="5"
            Description="RemotePlay Volume %"
            Minimum="0" 
            Maximum="100"
            TickFrequency="1"
            Value="{Binding Path=UserSettings.RemotePlayVolume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            x:Name="sliderVolume"
            />

        <TextBlock 
            Grid.Row="6"
            Grid.ColumnSpan="5"
            FontSize="10"
            Text="Because RemotePlay always seems reset to 100% volume on restart"
            />

        <TextBlock 
            Grid.Row="7"
            Grid.ColumnSpan="5"
            FontSize="10"
            Text="By editing the value of the slider, the volume will be remembered when you restart RemotePlay"
            />

        <!-- row 7 intentionally empty -->

        <TextBlock 
            Grid.Row="9"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="Show RemotePlay toolbar"
            />

        <!-- https://www.codeproject.com/Articles/1060961/WPFSpark-v -->
        <!-- data binding doesnt seem to work so see the click handler for updating the value -->
        <wpfspark:ToggleSwitch
            Grid.Row="9"
            Grid.Column="4"
            Background="black"
            BorderThickness="2px"
            Click="Handler_Ps4ToolBarVisibleToggle"
            IsChecked="{Binding Path=Utility.IsToolBarVisible, Mode=OneTime}"
            Height="30"
            HorizontalAlignment="Right"
            Style="{StaticResource {ComponentResourceKey ResourceId=ToggleSwitch.iOS.Light.Style, TypeInTargetAssembly={x:Type wpfspark:ToggleSwitch}}}" 
            VerticalAlignment="Center"
            Width="60"
            />

        <TextBlock 
            Grid.Row="10"
            Grid.ColumnSpan="5"
            FontSize="10"
            Text="By default we disable this bar as it can be annoying - it will appear if you move your mouse over the remote play window"
            />

    </Grid>
</UserControl>
